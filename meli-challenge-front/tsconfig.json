{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2019",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./",
    "types": [
      "node",
      "react",
      //"jest"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmit": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "**/*.png"]
}
